@{
    ViewBag.Title = "Home Page";
}

<h3>Home Page</h3>
<h4>This page shows the description of the program and the upload selection</h4>

<div class="container" style="background-color: #cccccc;">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <h3>Description</h3>
            <p>
                This system is used to select the different documents you want to upload. You can upload a document, image and video
                . This sytem then displays what you have uploaded. You can then select to download the file, image or video. You can also delete the different files. 
                You can click on the image or video to open the fancybox.
            </p>

            
        </div>
        <div class="col-md-6 col-sm-12">
            <h3>Option Selection</h3>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <p>Document &nbsp;<input type="radio" name="file" id="file" value="file"/></p>
                <p>Image &nbsp;<input type="radio" name="image" id="image" value="image" /></p>
                <p>Video &nbsp;<input type="radio" name="video" id="video" value="video" /></p>
                <div><input type="file" name="files" value="Browse" /></div>
                <br />
                <div><input type="submit" name="submit" value="Upload" /></div>

            }
        </div>
     </div>
</div>

