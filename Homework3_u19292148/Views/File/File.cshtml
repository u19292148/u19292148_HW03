
@{
    ViewBag.Title = "File";
}

@using Homework3_u19292148.Models
@model List<FileModel>



<h2>File</h2>

<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }
    </style>

</head>
<div class="well-sm">
    <h2>File Download / Delete</h2>
    <p>
        This is for DOWNLOADING files from the "Media/Document/" folder
    </p>
</div>


<div style="height: 400px; overflow: auto;">
    <div class="well-sm">
        <table class="table table-condensed table-hover">
            <thead style="position: sticky;top: 0">
                <tr bgcolor="#222222" class="auto-style">
                    <th class="col-lg-8">FILE NAME</th>
                    <th class="t, col-lg-2">DOWNLOAD OPTION</th>
                    <th class="t, col-lg-2">DELETE OPTION</th>
                </tr>
            </thead>
            @foreach (FileModel file in Model)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>
                        <button id="DWbut" class="btn btn-success"  style="color:white">
                            @Html.ActionLink("DOWNLOAD", "DownloadFile",
                             new { fileName = file.FileName })
                        </button>
                    </td>
                    <td>
                        <button id="Dbut" class="btn btn-danger"  style="color:white">
                            @Html.ActionLink("DELETE", "DeleteFile",
                           new { fileName = file.FileName },
                           new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
